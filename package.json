{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "format": "prettier . --write --ignore-unknown",
    "lint": "next lint",
    "lint:fix": "next lint --fix && pnpm format",
    "stylelint": "stylelint \"src/**/*.{scss,css}\" --allow-empty-input",
    "stylelint:fix": "pnpm stylelint -- --fix && pnpm format",
    "lint:all": "pnpm lint && pnpm stylelint",
    "commit": "cz",
    "sb": "storybook dev -p 6006",
    "build-sb": "storybook build",
    "tunnel": "ssh -p 443 -R0:127.0.0.1:3000 -L4300:127.0.0.1:4300 qr@a.pinggy.io"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "next": "15.1.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "3.2.4",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@commitlint/format": "^19.5.0",
    "@commitlint/types": "^19.5.0",
    "@eslint/eslintrc": "^3",
    "@storybook/addon-a11y": "^8.5.0",
    "@storybook/addon-essentials": "8.5.0",
    "@storybook/addon-interactions": "8.5.0",
    "@storybook/addon-onboarding": "8.5.0",
    "@storybook/blocks": "8.5.0",
    "@storybook/manager-api": "^8.5.0",
    "@storybook/nextjs": "8.5.0",
    "@storybook/react": "8.5.0",
    "@storybook/test": "8.5.0",
    "@storybook/theming": "^8.5.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9",
    "eslint-config-next": "15.1.5",
    "eslint-plugin-storybook": "^0.11.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.1",
    "pnpm": "^9.15.4",
    "prettier": "^3.4.2",
    "storybook": "8.5.0",
    "stylelint": "^16.13.2",
    "stylelint-config-standard": "^37.0.0",
    "stylelint-config-standard-scss": "^14.0.0",
    "typescript": "^5"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
